<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="SeekBarStyle1">
        <item name="primaryColor">@color/colorAccent</item>
        <item name="secondaryColor">#57FF006F</item>
        <item name="textColor">@android:color/darker_gray</item>
        <item name="textProgressEnabled">true</item>
    </style>

    <style name="SeekBarStyle2">
        <item name="primaryColor">@android:color/holo_purple</item>
        <item name="secondaryColor">#4A0048FF</item>
        <item name="textColor">@android:color/black</item>
        <item name="textProgressEnabled">true</item>
    </style>

    <style name="SeekBarStyle3">
        <item name="primaryColor">@android:color/holo_green_light</item>
        <item name="secondaryColor">#2C0D722F</item>
        <item name="textColor">@android:color/black</item>
        <item name="textProgressEnabled">true</item>
    </style>

</resources>
